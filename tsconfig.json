{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["DOM", "ES2021"],
    "emitDecoratorMetadata": true,

    "module": "es2020",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowJs": false,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["**/*.ts"]
}
